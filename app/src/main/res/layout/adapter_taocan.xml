<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myRelativeLayout="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="6dp"
    android:orientation="vertical">
    <com.dikai.chenghunjiclient.view.MyRelativeLayout
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        myRelativeLayout:relative_ratio="1.5">
        <android.support.v7.widget.CardView
            android:id="@+id/card_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?android:attr/selectableItemBackground"
            android:orientation="vertical"
            app:cardCornerRadius="6dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            tools:targetApi="lollipop">
            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </android.support.v7.widget.CardView>
    </com.dikai.chenghunjiclient.view.MyRelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/tv_desc"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text="枯藤老树小黄呀呀"
                android:textColor="@color/black_deep"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:gravity="end"
                android:text="￥23230"
                android:textColor="@color/main"
                android:textSize="16sp" />
        </LinearLayout>
        <co.lujun.androidtagview.TagContainerLayout
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/item_project_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:container_background_color="@color/white"
            app:container_border_color="@color/white"
            app:container_enable_drag="false"
            app:tag_text_color="@color/gray_text"
            app:tag_text_direction="ltr"
            app:tag_text_size="14sp"
            app:tag_theme="none"
            app:tag_background_color="@color/transparent"
            app:tag_border_color="@color/transparent"/>
    </LinearLayout>
</LinearLayout>