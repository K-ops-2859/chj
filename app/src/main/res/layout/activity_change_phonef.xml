<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_change_phonef"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.dikai.chenghunjiclient.activity.me.NewPhoneCodeActivity">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        app:elevation="0dp"
        android:layout_height="?actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white">
            <ImageView
                android:layout_marginRight="20dp"
                android:id="@+id/activity_new_phone_back"
                android:padding="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_app_gray_back"/>
            <TextView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/main_text"
                android:textSize="18sp"
                android:gravity="center"
                android:text="更换手机号"/>

            <TextView
                android:id="@+id/activity_new_phone_edit"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:textColor="@color/green"
                android:textSize="15sp"
                android:gravity="center"
                android:text="下一步"/>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/activity_new_phone_mark"
        android:layout_margin="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_text"
        android:textSize="12sp"
        android:text="请输入手机157****6612收到的短信验证码"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="14dp"
            android:text="验证码"
            android:textColor="@color/main_text"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/activity_register_code"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColor="@color/main_text"
            android:textColorHint="@color/gray_text"
            android:layout_marginRight="14dp"
            android:textSize="16sp" />

        <TextView
            android:layout_marginRight="14dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:id="@+id/tv_get_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:clickable="true"
            android:layout_height="wrap_content"
            android:background="@drawable/select_btn_main"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line"/>

</LinearLayout>
