<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_we_chat_pay_h5"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.dikai.chenghunjiclient.activity.store.WeChatPayH5Activity">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:src="@mipmap/ic_app_red_back"/>
            <TextView
                android:visibility="invisible"
                android:id="@+id/title"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text=""/>
            <ImageView
                android:visibility="invisible"
                android:id="@+id/share"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:foreground="?android:attr/selectableItemBackground"
                android:padding="8dp"
                android:src="@mipmap/ic_app_relay"/>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/gray_background">
        <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_vip_web"/>
        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:id="@+id/activity_vip_progress"
            android:progress="20"
            android:visibility="visible"
            android:layout_alignParentTop="true"/>
    </RelativeLayout>


</LinearLayout>
