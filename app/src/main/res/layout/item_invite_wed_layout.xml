<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginLeft="18dp"
        android:layout_marginBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/black_deep"
        android:textStyle="bold"
        android:text="邀请新人办婚礼，豪礼赚不停！"/>
    <TextView
        android:layout_marginLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="start"
        android:textColor="@color/black_deep"
        android:text="你赚：每邀请1位好友赚100元\n现金可提现，邀多赚多！"/>

    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginLeft="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="start"
        android:textColor="@color/black_deep"
        android:text="TA赚：新人婚礼花多少返多少，\n连续5年均再赚2888元豪礼！"/>

    <LinearLayout
        android:layout_marginLeft="18dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/apply"
            android:clickable="true"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="start"
            android:textColor="@color/white"
            android:background="@drawable/bg_red"
            android:text="立即邀请"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/share"
            android:clickable="true"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="start"
            android:textColor="@color/main_line"
            android:background="@drawable/text_bg_white_red"
            android:text="分享给好友"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/record"
        android:background="@drawable/ripple_bg"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:padding="18dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/black_deep"
            android:text="邀请记录"/>
        <ImageView
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_gray_go"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line"/>

    <LinearLayout
        android:id="@+id/rule"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:padding="18dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/black_deep"
            android:text="活动规则"/>
        <ImageView
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_gray_go"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line"/>
    <LinearLayout
        android:id="@+id/qr_code"
        android:background="@drawable/ripple_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:padding="18dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:textColor="@color/black_deep"
            android:text="二维码邀请"
            android:id="@+id/textView3"/>
        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/ic_app_qr_code"/>
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="18dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_gray_go"/>
    </LinearLayout>
    <View
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line"/>
    <TextView
        android:layout_margin="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black_deep"
        android:text="品牌豪礼"/>

</LinearLayout>