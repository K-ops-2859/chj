<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:myImageView="http://schemas.android.com/apk/res-auto"
    xmlns:myRelativeLayout="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <com.dikai.chenghunjiclient.view.MyRelativeLayout
            android:layout_centerInParent="true"
            android:layout_margin="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            myRelativeLayout:relative_ratio="0.75">

            <ImageView
                android:id="@+id/red_packed_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <com.dikai.chenghunjiclient.view.MyImageView
                android:layout_alignParentBottom="true"
                android:layout_margin="40dp"
                android:id="@+id/get_now"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                myImageView:aspect_ratio="4.5"
                android:src="@drawable/get_now"/>
            <ImageView
                android:id="@+id/close"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/white_close"/>
        </com.dikai.chenghunjiclient.view.MyRelativeLayout>
        <View
            android:visibility="gone"
            android:id="@+id/gray_view"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent_black2"/>
        <TextView
            android:id="@+id/text1"
            android:visibility="gone"
            android:layout_marginBottom="124dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:text="分享到微信好友或者朋友圈"/>
        <TextView
            android:id="@+id/text2"
            android:visibility="gone"
            android:layout_marginBottom="100dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:text="返回成婚纪即可拆红包"/>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/share"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <LinearLayout
                android:id="@+id/friends"
                android:layout_marginStart="40dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@mipmap/ic_app_wechat_logo"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_light"
                    android:textSize="12sp"
                    android:text="微信好友"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/moments"
                android:layout_marginEnd="40dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@mipmap/ic_app_moments"/>
                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_light"
                    android:textSize="12sp"
                    android:text="朋友圈"/>
            </LinearLayout>

        </LinearLayout>
        
    </RelativeLayout>
</RelativeLayout>