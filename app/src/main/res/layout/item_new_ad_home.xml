<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="9dp"
    android:layout_marginBottom="9dp"
    android:background="@drawable/card_bg_10_conner">

    <LinearLayout
        android:paddingTop="12dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/sup_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">
            <com.joooonho.SelectableRoundedImageView
                android:id="@+id/logo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                app:sriv_left_top_corner_radius="4dp"
                app:sriv_right_top_corner_radius="4dp"
                app:sriv_left_bottom_corner_radius="4dp"
                app:sriv_right_bottom_corner_radius="4dp"
                app:sriv_border_width="0dip"
                app:sriv_border_color="#008fea"
                app:sriv_oval="false"/>
            <TextView
                android:id="@+id/name"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="20dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:lineSpacingExtra="4dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text="青岛东方影都万达希尔顿逸林酒店"/>
        </LinearLayout>
        <TextView
            android:clickable="true"
            android:id="@+id/all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/black_three"
            android:text="查看全部"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@mipmap/ic_app_gray_goin"/>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:id="@+id/item_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>