<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_combo_comment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.dikai.chenghunjiclient.activity.store.ComboCommentActivity">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white">
            <ImageView
                android:id="@+id/back"
                android:padding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="40dp"
                android:layout_marginEnd="20dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_app_gray_back"/>
            <TextView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center"
                android:text="评价此套餐"/>
            <TextView
                android:id="@+id/publish"
                android:gravity="center"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:textColor="@color/black_light"
                android:textSize="14sp"
                android:text="提交"/>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
    <EditText
        android:id="@+id/edit"
        android:textSize="14sp"
        android:textColor="@color/black_light"
        android:textColorHint="@color/gray_text"
        android:hint="这个套餐怎么样呢~"
        android:padding="10dp"
        android:gravity="start"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bg_edit_search_gray"/>
</LinearLayout>
