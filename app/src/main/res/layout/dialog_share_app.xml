<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_black2"
    xmlns:myRelativeLayout="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="12dp"
                android:layout_gravity="end"
                android:id="@+id/close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/white_close"/>
            <com.dikai.chenghunjiclient.view.MyRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                myRelativeLayout:relative_ratio="0.765">
                <ImageView
                    android:src="@drawable/share_app_success"
                    android:id="@+id/red_packed_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/money_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="bottom|center_horizontal">
                            <TextView
                                android:id="@+id/money"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/yellow"
                                android:textSize="50sp"
                                android:text="0.5"/>
                            <TextView
                                android:layout_marginLeft="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/yellow"
                                android:textSize="20sp"
                                android:text="å…ƒ"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_marginTop="4dp"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/get_now"
                            android:layout_width="140dp"
                            android:layout_height="35dp"
                            android:src="@drawable/share_app_button_01"/>
                    </LinearLayout>
                </LinearLayout>
            </com.dikai.chenghunjiclient.view.MyRelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>