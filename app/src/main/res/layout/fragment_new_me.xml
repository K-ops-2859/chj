                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/iv_user_logo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_logo_new"
                    app:sriv_border_width="0dp"
                    app:sriv_oval="true" />
                <LinearLayout
                    android:id="@+id/ll_login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:lines="1"
                            android:ellipsize="end"
                            android:id="@+id/tv_user_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="用户名"
                            android:textColor="@color/black_light_three"
                            android:textSize="22sp" />

                        <TextView
                            android:layout_margin="10dp"
                            android:paddingStart="4dp"
                            android:paddingEnd="4dp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:id="@+id/tv_user_profession"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="婚庆"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            android:background="@drawable/text_pink_gray_line"/>
                    </LinearLayout>
                    <TextView
                        android:clickable="true"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:id="@+id/tv_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="点击编辑"
                        android:textColor="@color/gray_text"
                        android:textSize="12sp"
                        android:background="@drawable/bg_btn_gray_1"/>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/ll_focus"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:paddingEnd="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="关注"
                                android:textColor="@color/gray_text"
                                android:textSize="13sp"/>
                            <TextView
                                android:layout_marginStart="8dp"
                                android:id="@+id/tv_focus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/pink_main"
                                android:textSize="13sp"/>
