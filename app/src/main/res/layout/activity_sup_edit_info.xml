<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_sup_edit_info"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background"
    tools:context="com.dikai.chenghunjiclient.activity.me.SupEditInfoActivity">
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white">

            <ImageView
                android:id="@+id/user_info_back"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_app_gray_back"/>

            <TextView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/main_text"
                android:textSize="18sp"
                android:gravity="center"
                android:text="供应商资料"/>
            <TextView
                android:id="@+id/user_info_save"
                android:clickable="true"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:gravity="center"
                android:text="保存"/>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手机"
                    android:textColor="@color/gray_text"
                    android:textSize="16sp"/>
                <EditText
                    android:padding="16dp"
                    android:id="@+id/user_info_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:background="@null"
                    android:textColorHint="@color/gray_text"
                    android:hint="请输入联系人手机号"
                    android:textColor="@color/main_text"
                    android:textSize="16sp" />
            </LinearLayout>
            <View
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_line" />
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地区"
                    android:textColor="@color/gray_text"
                    android:textSize="16sp"/>
                <TextView
                    android:clickable="true"
                    android:padding="16dp"
                    android:id="@+id/user_info_region"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColorHint="@color/gray_text"
                    android:hint="选择所在地区"
                    android:textColor="@color/main_text"
                    android:textSize="16sp" />
                <ImageView
                    android:layout_marginRight="16dp"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/ic_app_gray_goin"/>
            </LinearLayout>
            <View
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_line" />
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:textColor="@color/gray_text"
                    android:textSize="16sp"/>
                <EditText
                    android:padding="16dp"
                    android:id="@+id/user_info_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:background="@null"
                    android:textColorHint="@color/gray_text"
                    android:hint="请输入具体地址"
                    android:textColor="@color/main_text"
                    android:textSize="16sp" />
            </LinearLayout>
            <View
                android:layout_marginLeft="16dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_line" />
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:layout_marginLeft="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="简介"
                    android:textColor="@color/gray_text"
                    android:textSize="16sp"/>
                <EditText
                    android:padding="16dp"
                    android:id="@+id/user_info_intro"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:background="@null"
                    android:textColorHint="@color/gray_text"
                    android:hint="请输入简介"
                    android:textColor="@color/main_text"
                    android:textSize="16sp" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_line" />

            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:textSize="14sp"
                android:text="添加封面图"/>

            <android.support.v7.widget.RecyclerView
                android:padding="16dp"
                android:background="@color/white"
                android:id="@+id/add_room_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
