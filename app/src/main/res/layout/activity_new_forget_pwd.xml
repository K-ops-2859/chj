<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_new_forget_pwd"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.dikai.chenghunjiclient.activity.newregister.NewForgetPwdActivity">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/back"
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@mipmap/ic_gray_back"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <View
            android:layout_width="4dp"
            android:layout_height="30dp"
            android:background="@color/red_new"/>
        <TextView
            android:id="@+id/title"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:text="忘记密码？"/>
    </LinearLayout>
    <TextView
        android:id="@+id/info"
        android:lineSpacingExtra="4dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_text"
        android:textSize="13sp"
        android:text="你可以通过手机短信验证码的方式，重置你的密码完成登录"/>
    <LinearLayout
        android:layout_marginTop="24dp"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/area_num"
            android:clickable="true"
            android:paddingEnd="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:text="+86"/>
        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom"
            android:layout_width="5dp"
            android:layout_height="4dp"
            android:src="@mipmap/rectangle_more"/>
        <EditText
            android:id="@+id/phone"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_text"
            android:hint="输入手机号"/>

    </LinearLayout>
    <View
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line"/>
    <TextView
        android:id="@+id/send"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="10dp"
        android:padding="12dp"
        android:gravity="center"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="发送验证码"
        android:background="@drawable/text_bg_pink_new"/>
    <TextView
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:id="@+id/service"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_light_two"
        android:textSize="13sp"
        android:text="其他问题？联系客服"/>
</LinearLayout>
