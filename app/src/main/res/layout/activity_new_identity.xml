<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_new_identity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.dikai.chenghunjiclient.activity.newregister.NewIdentityActivity">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/back"
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@mipmap/ic_gray_back"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <View
            android:layout_width="4dp"
            android:layout_height="30dp"
            android:background="@color/red_new"/>
        <TextView
            android:id="@+id/title"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:text="您的身份是？"/>
    </LinearLayout>

    <RadioGroup
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/select_group"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/select_1"
            style="@style/MainTabItem"
            android:text="新人"/>

        <RadioButton
            android:layout_marginTop="20dp"
            android:id="@+id/select_2"
            style="@style/MainTabItem"
            android:text="供应商"/>

        <RadioButton
            android:layout_marginTop="20dp"
            android:id="@+id/select_3"
            style="@style/MainTabItem"
            android:text="酒店"/>

        <RadioButton
            android:layout_marginTop="20dp"
            android:id="@+id/select_4"
            style="@style/MainTabItem"
            android:text="婚庆公司"/>
    </RadioGroup>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:clickable="true"
            android:padding="14dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="@color/select_identity_text"
            android:hint="请选择您所在地区"
            android:textSize="22sp"
            android:text=""
            android:id="@+id/area"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_app_gray_goin"/>
    </LinearLayout>
    <TextView
        android:id="@+id/next"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:padding="12dp"
        android:gravity="center"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:text="下一步"
        android:background="@drawable/text_bg_pink_new"/>

</LinearLayout>
