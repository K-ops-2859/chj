<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_make_project"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background"
    tools:context="com.dikai.chenghunjiclient.activity.wedding.MakeProjectActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/activity_wedding_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_app_gray_back" />
        <TextView
            android:id="@+id/activity_info_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:text="免费领仪式对戒"
            android:textColor="@color/black_one"
            android:textSize="18sp" />
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/groom_logo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/man_02"/>
                    <TextView
                        android:id="@+id/groom_text"
                        android:layout_margin="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我是新郎"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/bride_logo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@mipmap/women_01"/>
                    <TextView
                        android:id="@+id/bride_text"
                        android:layout_margin="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我是新娘"
                        android:textSize="14sp"
                        android:textColor="@color/gray_text"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_bg_black"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginRight="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="姓   名"/>
                <EditText
                    android:id="@+id/ev_name"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:background="@color/white"
                    android:textColor="@color/gray_pic"
                    android:textColorHint="@color/gray_text"
                    android:hint="您的姓名"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_bg_black"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginRight="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="手   机"/>
                <EditText
                    android:id="@+id/ev_phone"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:background="@color/white"
                    android:textColor="@color/gray_pic"
                    android:textColorHint="@color/gray_text"
                    android:hint="您的手机"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_bg_black"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginRight="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="邀请码（选填）"/>
                <EditText
                    android:id="@+id/ev_code"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:background="@color/white"
                    android:textColor="@color/gray_pic"
                    android:textColorHint="@color/gray_text"
                    android:hint="邀请码"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:textSize="11sp"
                android:text="请输入另一半的手机进行绑定，互相绑定后，可以共同编辑“我们的”新婚档案"/>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:padding="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/text_bg_black"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginRight="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="TA 的手机"/>
                <EditText
                    android:id="@+id/ev_other_phone"
                    android:gravity="end"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:background="@color/white"
                    android:textColor="@color/gray_pic"
                    android:textColorHint="@color/gray_text"
                    android:hint="TA的手机"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_finish"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:background="@drawable/select_btn_main"
                android:clickable="true"
                android:gravity="center"
                android:text="完成"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
