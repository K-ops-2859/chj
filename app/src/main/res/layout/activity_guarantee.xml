<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_guarantee"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.dikai.chenghunjiclient.activity.wedding.GuaranteeActivity">
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white">
            <ImageView
                android:id="@+id/back"
                android:padding="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_app_gray_back"/>
            <TextView
                android:layout_marginRight="40dp"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/main_text"
                android:textSize="18sp"
                android:gravity="center"
                android:text="担保合同"/>

            <!--<TextView-->
                <!--android:id="@+id/share"-->
                <!--android:clickable="true"-->
                <!--android:layout_width="60dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:textColor="@color/main_line"-->
                <!--android:textSize="15sp"-->
                <!--android:gravity="center"-->
                <!--android:text="分享"/>-->
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include
                android:visibility="visible"
                layout="@layout/item_guarantee_head"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_line"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:background="@color/gray_background"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <LinearLayout
                    android:background="@drawable/ripple_bg"
                    android:id="@+id/ll_service"
                    android:padding="14dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text="四、婚礼服务项目"/>
                    <ImageView
                        android:id="@+id/img_service"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/ic_main_down"/>
                </LinearLayout>
                <include
                    android:visibility="gone"
                    layout="@layout/item_guarantee_service"/>
                <View
                    android:layout_marginLeft="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_line"/>

                <LinearLayout
                    android:background="@drawable/ripple_bg"
                    android:id="@+id/ll_pay"
                    android:padding="14dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text="五、服务费用及支付"/>
                    <ImageView
                        android:id="@+id/img_pay"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/ic_main_down"/>
                </LinearLayout>
                <include
                    android:visibility="gone"
                    layout="@layout/item_guarantee_pay"/>
                <View
                    android:layout_marginLeft="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_line"/>

                <LinearLayout
                    android:background="@drawable/ripple_bg"
                    android:id="@+id/ll_duty"
                    android:padding="14dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text="六、双方主要权利义务"/>
                    <ImageView
                        android:id="@+id/img_duty"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/ic_main_down"/>
                </LinearLayout>
                <include
                    android:visibility="gone"
                    layout="@layout/item_guarantee_duty"/>
                <View
                    android:layout_marginLeft="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_line"/>

                <LinearLayout
                    android:background="@drawable/ripple_bg"
                    android:id="@+id/ll_weiyue"
                    android:padding="14dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text="七、双方主要违约责任"/>
                    <ImageView
                        android:id="@+id/img_weiyue"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/ic_main_down"/>
                </LinearLayout>
                <include
                    android:visibility="gone"
                    layout="@layout/item_guarantee_weiyue"/>
                <View
                    android:layout_marginLeft="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_line"/>

                <LinearLayout
                    android:background="@drawable/ripple_bg"
                    android:id="@+id/ll_relieve"
                    android:padding="14dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:text="八、合同的解除"/>
                    <ImageView
                        android:id="@+id/img_relieve"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@mipmap/ic_main_down"/>
                </LinearLayout>
                <include
                    android:visibility="gone"
                    layout="@layout/item_guarantee_relieve"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_line"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:background="@color/gray_background"/>
            <include
                android:visibility="visible"
                layout="@layout/item_guarantee_other"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_line"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:background="@color/gray_background"/>
            <include
                android:visibility="visible"
                layout="@layout/item_guarantee_info"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
