<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_new_login"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.dikai.chenghunjiclient.activity.newregister.NewLoginActivity">
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <ImageView
        android:id="@+id/back"
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:src="@mipmap/ic_gray_back"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <View
            android:layout_width="4dp"
            android:layout_height="30dp"
            android:background="@color/red_new"/>
        <TextView
            android:id="@+id/title"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:text="登录成婚纪"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/phone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/info"
            android:layout_marginStart="14dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text"
            android:textSize="13sp"
            android:text="登录以享受更多服务"/>
        <LinearLayout
            android:layout_marginTop="24dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/area_num"
                android:clickable="true"
                android:paddingEnd="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:text="+86"/>
            <ImageView
                android:layout_marginBottom="10dp"
                android:layout_gravity="bottom"
                android:layout_width="5dp"
                android:layout_height="4dp"
                android:src="@mipmap/rectangle_more"/>
            <EditText
                android:id="@+id/phone"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_text"
                android:hint="输入手机号"/>

        </LinearLayout>
        <View
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_line"/>
        <TextView
            android:id="@+id/send"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="10dp"
            android:padding="12dp"
            android:gravity="center"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="发送验证码"
            android:background="@drawable/text_bg_pink_new"/>

        <TextView
            android:id="@+id/pwd_login"
            android:clickable="true"
            android:padding="6dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_three"
            android:textSize="13sp"
            android:text="账号密码登录"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_layout"
        android:visibility="gone"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/phone_edit"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_btn"
            android:inputType="phone"
            android:hint="手机号"
            android:text=""/>
        <View
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_line"/>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/pwd_edit"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_btn"
                android:inputType="textPassword"
                android:hint="密码"
                android:text=""/>
            <ImageView
                android:id="@+id/show_pwd"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="4dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@mipmap/ic_show_pwd"/>
        </LinearLayout>
        <View
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_line"/>
        <TextView
            android:id="@+id/login"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="10dp"
            android:padding="12dp"
            android:gravity="center"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="登录"
            android:background="@drawable/text_bg_pink_new"/>
        <LinearLayout
            android:layout_marginStart="34dp"
            android:layout_marginEnd="34dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/phone_login"
                android:clickable="true"
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_three"
                android:textSize="13sp"
                android:text="手机验证码登录"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/forget_pwd"
                android:clickable="true"
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_three"
                android:textSize="13sp"
                android:text="忘记密码？"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/wechat_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:textSize="13sp"
                android:text="第三方登录"/>
            <ImageView
                android:id="@+id/wechat_login"
                android:layout_marginTop="12dp"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/wechat_logo_login"/>
            <TextView
                android:id="@+id/xieyi"
                android:clickable="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:text="@string/login_info"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
