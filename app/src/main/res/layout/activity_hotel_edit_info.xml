<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_hotel_edit_info"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray_background"
    tools:context="com.dikai.chenghunjiclient.activity.me.HotelEditInfoActivity">
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        app:elevation="0dp"
        android:layout_height="?actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white">

            <ImageView
                android:id="@+id/hotel_info_back"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_app_gray_back"/>

            <TextView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/main_text"
                android:textSize="18sp"
                android:gravity="center"
                android:text="酒店资料"/>
            <TextView
                android:id="@+id/hotel_info_save"
                android:clickable="true"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:textColor="@color/green"
                android:textSize="14sp"
                android:gravity="center"
                android:text="保存"/>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:id="@+id/hotel_info_logo_layout"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/hotel_info_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@color/white"
            android:layout_centerInParent="true"/>
        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_app_camera" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line" />

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名称"
            android:textColor="@color/gray_text"
            android:textSize="16sp"/>
        <EditText
            android:padding="16dp"
            android:id="@+id/hotel_info_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:background="@null"
            android:textColorHint="@color/gray_text"
            android:hint="请输入昵称"
            android:textColor="@color/main_text"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line" />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话"
            android:textColor="@color/gray_text"
            android:textSize="16sp"/>
        <EditText
            android:inputType="phone"
            android:background="@color/white"
            android:padding="16dp"
            android:id="@+id/hotel_info_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="酒店电话"
            android:textColorHint="@color/gray_text"
            android:textColor="@color/main_text"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line" />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地区"
            android:textColor="@color/gray_text"
            android:textSize="16sp"/>
        <TextView
            android:clickable="true"
            android:padding="16dp"
            android:id="@+id/hotel_info_region"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/main_text"
            android:textSize="16sp" />
        <ImageView
            android:layout_marginRight="16dp"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/ic_app_gray_goin"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line" />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址"
            android:textColor="@color/gray_text"
            android:textSize="16sp"/>
        <EditText
            android:padding="16dp"
            android:id="@+id/hotel_info_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:background="@null"
            android:textColorHint="@color/gray_text"
            android:hint="请输入地址"
            android:textColor="@color/main_text"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:layout_marginLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line" />
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介"
            android:textColor="@color/gray_text"
            android:textSize="16sp"/>
        <EditText
            android:padding="16dp"
            android:id="@+id/hotel_info_intro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:background="@null"
            android:textColorHint="@color/gray_text"
            android:hint="请输入简介"
            android:textColor="@color/main_text"
            android:textSize="16sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line" />
</LinearLayout>
