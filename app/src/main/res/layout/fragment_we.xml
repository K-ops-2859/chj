<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_fresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dikai.chenghunjiclient.fragment.wedding.WeProFragment">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white1">
        <LinearLayout
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_one"
                android:textSize="16sp"
                android:text="场布预算"/>
            <LinearLayout
                android:id="@+id/ll_budget"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_pink_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/ic_app_add_pro"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="添加您的场布预算"
                        android:textColor="@color/main_line"
                        android:textSize="14sp"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="除了婚宴、人员安排，只是布置酒店的场布预算"
                    android:textColor="@color/gray_text"
                    android:textSize="12sp"/>
            </LinearLayout>
            <include
                layout="@layout/wedding_we_budget"
                android:visibility="gone"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_one"
                android:textSize="16sp"
                android:text="酒店宴会厅信息"/>
            <LinearLayout
                android:id="@+id/ll_hotel"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_pink_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/ic_app_add_pro"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="描述您选择的酒店相关信息"
                        android:textColor="@color/main_line"
                        android:textSize="14sp"/>
                </LinearLayout>
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提供的相关照片越多越有利于设计"
                    android:textColor="@color/gray_text"
                    android:textSize="12sp"/>
            </LinearLayout>
            <include
                layout="@layout/we_hotel_layout"
                android:visibility="gone"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_one"
                android:textSize="16sp"
                android:text="是否需要LED大屏幕？"/>
            <LinearLayout
                android:id="@+id/ll_led"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_pink_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="30dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/ic_app_add_pro"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是否需要LED大屏幕"
                    android:textColor="@color/main_line"
                    android:textSize="14sp"/>
            </LinearLayout>
            <include
                layout="@layout/we_led_layout"
                android:visibility="gone"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_one"
                android:textSize="16sp"
                android:text="婚期？"/>
            <LinearLayout
                android:id="@+id/ll_date"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_pink_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="30dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/ic_app_add_pro"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="婚期"
                    android:textColor="@color/main_line"
                    android:textSize="14sp"/>
            </LinearLayout>
            <include
                layout="@layout/we_date_layout"
                android:visibility="gone"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_one"
                android:textSize="16sp"
                android:text="特别说明"/>
            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_pink_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="30dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/ic_app_add_pro"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请填写需要注意的婚礼细节"
                    android:textColor="@color/main_line"
                    android:textSize="14sp"/>
            </LinearLayout>
            <include
                layout="@layout/we_info_layout"
                android:visibility="gone"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_one"
                android:textSize="16sp"
                android:text="邀请码"/>
            <LinearLayout
                android:id="@+id/ll_code"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_pink_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="30dp"
                android:gravity="center">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/ic_app_add_pro"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="邀请码"
                    android:textColor="@color/main_line"
                    android:textSize="14sp"/>
            </LinearLayout>
            <include
                layout="@layout/we_code_layout"
                android:visibility="gone"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_one"
                android:textSize="16sp"
                android:text="婚纱照片"/>
            <LinearLayout
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_gray_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:lineSpacingExtra="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wed_photo_info"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_one"
                android:textSize="16sp"
                android:text="收费标准"/>
            <LinearLayout
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_gray_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:lineSpacingExtra="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wed_rates"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_one"
                android:textSize="16sp"
                android:text="联系我们"/>
            <LinearLayout
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_gray_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:lineSpacingExtra="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wed_service"
                    android:textColor="@color/gray_text"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.v4.widget.SwipeRefreshLayout>