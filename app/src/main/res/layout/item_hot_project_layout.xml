<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:myRelativeLayout="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/hot_project_layout"
    android:layout_margin="6dp"
    android:orientation="vertical"
    android:layout_width="240dp"
    android:layout_height="wrap_content">
    <com.dikai.chenghunjiclient.view.MyRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        myRelativeLayout:relative_ratio="1.78">
        <com.joooonho.SelectableRoundedImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hot_project_img"
            android:scaleType="centerCrop"
            app:sriv_left_top_corner_radius="4dp"
            app:sriv_right_top_corner_radius="4dp"
            app:sriv_left_bottom_corner_radius="4dp"
            app:sriv_right_bottom_corner_radius="4dp"
            app:sriv_border_width="0dip"
            app:sriv_border_color="#008fea"
            app:sriv_oval="false"/>
    </com.dikai.chenghunjiclient.view.MyRelativeLayout>
    <TextView
        android:id="@+id/hot_project_name"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text=""/>
    <TextView
        android:id="@+id/hot_project_info"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/gray_text"
        android:text=""/>
</LinearLayout>