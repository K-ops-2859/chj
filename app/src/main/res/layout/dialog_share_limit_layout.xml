<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:myRelativeLayout="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginBottom="20dp"
                android:layout_gravity="end"
                android:id="@+id/close"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/white_close"/>
            <com.dikai.chenghunjiclient.view.MyRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                myRelativeLayout:relative_ratio="0.85">
                <ImageView
                    android:src="@drawable/share_app_fail"
                    android:id="@+id/red_packed_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2">
                        <ImageView
                            android:layout_centerInParent="true"
                            android:id="@+id/get_now"
                            android:layout_width="130dp"
                            android:layout_height="45dp"
                            android:src="@drawable/share_app_button_02"/>
                    </RelativeLayout>
                </LinearLayout>
            </com.dikai.chenghunjiclient.view.MyRelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>