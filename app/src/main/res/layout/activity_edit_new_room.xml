<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_edit_new_room"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.dikai.chenghunjiclient.activity.me.EditNewRoomActivity">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:layout_marginEnd="20dp"
            android:id="@+id/back"
            android:padding="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_app_gray_back"/>
        <TextView
            android:id="@+id/title"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center"
            android:text="宴会厅详情"/>
        <ImageView
            android:id="@+id/more"
            android:padding="16dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_more_black"/>
    </LinearLayout>
    <View
        android:background="@color/gray_background_2"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:padding="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:text="青岛印象大宴会厅"/>
                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/area"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/gray_text"
                            android:text="面积  300㎡"/>
                        <View
                            android:layout_marginStart="11dp"
                            android:layout_marginEnd="11dp"
                            android:layout_width="1px"
                            android:layout_height="11dp"
                            android:background="@color/gray_background_2"/>
                        <TextView
                            android:id="@+id/height"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/gray_text"
                            android:text="层高  4.5m"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/table"
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:text="最多容纳26桌"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/info_edit"
                    android:gravity="center"
                    android:clickable="true"
                    android:layout_gravity="center_vertical"
                    android:layout_width="48dp"
                    android:layout_height="27dp"
                    android:textSize="13sp"
                    android:textColor="@color/black_three"
                    android:text="编辑"
                    android:background="@drawable/text_bg_circle_line"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="9dp"
                android:background="@color/gray_background3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/photo_num"
                    android:layout_marginStart="18dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:text="相册   (0)"/>
                <TextView
                    android:id="@+id/photo_edit"
                    android:layout_marginBottom="14dp"
                    android:layout_marginTop="14dp"
                    android:layout_marginEnd="18dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:layout_gravity="center_vertical"
                    android:layout_width="48dp"
                    android:layout_height="27dp"
                    android:textSize="13sp"
                    android:textColor="@color/black_three"
                    android:text="编辑"
                    android:background="@drawable/text_bg_circle_line"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
