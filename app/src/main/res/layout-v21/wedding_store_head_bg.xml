<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:myRelativeLayout="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/store_bg_jianbian">
    <com.dikai.chenghunjiclient.view.MyRelativeLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        myRelativeLayout:relative_ratio="2">
        <com.joooonho.SelectableRoundedImageView
            android:elevation="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_app_example"
            android:id="@+id/bg"
            android:scaleType="centerCrop"
            app:sriv_left_top_corner_radius="8dp"
            app:sriv_right_top_corner_radius="8dp"
            app:sriv_left_bottom_corner_radius="8dp"
            app:sriv_right_bottom_corner_radius="8dp"
            app:sriv_border_width="0dip"
            app:sriv_border_color="#008fea"
            app:sriv_oval="false"/>
    </com.dikai.chenghunjiclient.view.MyRelativeLayout>
    <LinearLayout
        android:elevation="2dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/text_bg_white">
        <LinearLayout
            android:layout_margin="20dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:textSize="14sp"
                android:text="可用额度"/>

            <TextView
                android:layout_marginTop="4dp"
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_one"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginEnd="16dp"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/apply"
                android:clickable="true"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:background="@drawable/text_bg_gray_corner"
                android:textSize="12sp"
                android:text="申请礼品"/>
            <TextView
                android:layout_marginTop="7dp"
                android:id="@+id/rule"
                android:clickable="true"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:text="活动规则"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>