<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background2"
    tools:context="com.dikai.chenghunjiclient.activity.me.EditSupInfoActivity">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:background="@color/white">
        <TextView
            android:id="@+id/cancel"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:text="取消"/>
        <TextView
            android:id="@+id/title"
            android:padding="5dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center"
            android:text="编辑商家资料"/>
        <TextView
            android:id="@+id/save"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:textColor="@color/gray_text"
            android:textSize="16sp"
            android:gravity="center"
            android:text="保存"/>
    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/user_info_logo_layout"
                    android:layout_marginTop="60dp"
                    android:layout_marginBottom="60dp"
                    android:layout_gravity="center"
                    android:layout_width="100dp"
                    android:layout_height="100dp">
                    <ImageView
                        android:id="@+id/user_info_logo"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:background="@color/gray_background2"/>
                    <ImageView
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentEnd="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_app_camera" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:text="基本信息"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_background_2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="昵称"/>
                    <EditText
                        android:id="@+id/nick"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_line2"
                        android:hint="请输入商家用户昵称"/>
                </LinearLayout>
                <View
                    android:layout_marginStart="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_background_2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="手机"/>
                    <EditText
                        android:inputType="phone"
                        android:id="@+id/phone"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_line2"
                        android:hint="请输入商家联系人手机"/>
                </LinearLayout>
                <View
                    android:layout_marginStart="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_background_2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="所在地"/>
                    <TextView
                        android:id="@+id/area"
                        android:clickable="true"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_line2"
                        android:hint="请选择商家所在地"/>
                </LinearLayout>
                <View
                    android:layout_marginStart="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_background_2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="详细地址"/>
                    <EditText
                        android:id="@+id/address"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_line2"
                        android:hint="请输入商家详细地址"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:text="店铺简介"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_background_2"/>
                <EditText
                    android:id="@+id/sup_info"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="112dp"
                    android:background="@color/white"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_line2"
                    android:gravity="start"
                    android:hint="添加店铺描述，让客户对您的服务有更深的了解"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hotel_info_layout"
                android:layout_marginTop="9dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:text="酒店信息(非必填)"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_background_2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="最低餐标"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/canbiao"
                            android:layout_marginTop="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/add_canbiao"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="20dp"
                            android:clickable="true"
                            android:layout_marginEnd="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/red_new"
                            android:text="添加"/>
                    </LinearLayout>
                    <!--<EditText-->
                        <!--android:inputType="numberDecimal"-->
                        <!--android:id="@+id/table_price"-->
                        <!--android:paddingTop="20dp"-->
                        <!--android:paddingBottom="20dp"-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_weight="3"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:background="@color/white"-->
                        <!--android:textSize="15sp"-->
                        <!--android:textColor="@color/black"-->
                        <!--android:textColorHint="@color/gray_line2"-->
                        <!--android:hint="0.0 ￥"/>-->
                </LinearLayout>
                <View
                    android:layout_marginStart="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_background_2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="服务费"/>
                    <EditText
                        android:inputType="numberDecimal"
                        android:id="@+id/service_price"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_line2"
                        android:hint="0.0 %"/>
                </LinearLayout>
                <View
                    android:layout_marginStart="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_background_2"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:text="基础优惠"/>
                    <TextView
                        android:id="@+id/discounts"
                        android:clickable="true"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:gravity="end"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_line2"
                        android:hint="当前0条优惠"/>
                    <ImageView
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="18dp"
                        android:layout_width="6dp"
                        android:layout_height="11dp"
                        android:src="@mipmap/ic_app_black_goin"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="9dp"
                android:layout_marginBottom="90dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginStart="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:text="添加封面图"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_background_2"/>
                <android.support.v7.widget.RecyclerView
                    android:layout_margin="13dp"
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
