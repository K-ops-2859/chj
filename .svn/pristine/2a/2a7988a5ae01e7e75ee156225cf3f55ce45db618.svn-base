<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_new_add_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="@color/gray_background"/>
    <LinearLayout
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_new_add_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/gray_background"/>
        <LinearLayout
            android:layout_margin="6dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_new_add_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="为爱牵手婚庆服务"
                android:textSize="16sp"
                android:textColor="@color/main_text"/>
            <TextView
                android:id="@+id/item_new_add_phone"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="为爱牵手婚庆服务"
                android:textSize="14sp"
                android:textColor="@color/gray_text"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/item_new_add_call"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/ic_app_yellow_call"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <LinearLayout
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_new_add_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="27日  周六\n六月初四"
                android:textSize="14sp"
                android:textColor="@color/gray_text"/>
        </LinearLayout>
        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="1px"
            android:layout_height="30dp"
            android:background="@color/gray_line"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="酒店"
                    android:textSize="14sp"
                    android:textColor="@color/gray_text"/>
                <TextView
                    android:id="@+id/item_new_add_hotel"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="为爱牵手婚庆服务"
                    android:textSize="14sp"
                    android:textColor="@color/black_one"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:textSize="14sp"
                    android:textColor="@color/gray_text"/>
                <TextView
                    android:id="@+id/item_new_add_address"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="为爱牵手婚庆服务"
                    android:textSize="14sp"
                    android:textColor="@color/black_one"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>
    <LinearLayout
        android:padding="10dp"
        android:gravity="center_vertical|end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_new_add_refuse"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拒绝"
            android:textSize="12sp"
            android:textColor="@color/gray_text"
            android:background="@drawable/text_gray_bg"/>
        <TextView
            android:id="@+id/item_new_add_agree"
            android:clickable="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接受"
            android:textSize="12sp"
            android:textColor="@color/main_light"
            android:background="@drawable/text_red_bg"/>
    </LinearLayout>

</LinearLayout>