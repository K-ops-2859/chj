<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="132dp">
                <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white">
                    <LinearLayout
                        android:padding="16dp"
                        android:layout_marginStart="116dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/red_main2"
                            android:textSize="16sp"/>
                        <TextView
                            android:id="@+id/stock"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/gray_text"
                            android:textSize="12sp"/>
                        <TextView
                            android:id="@+id/select_info"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black_text"
                            android:textSize="14sp"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/close"
                        android:padding="8dp"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@mipmap/ic_app_close_shop"/>
                </LinearLayout>

                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/img"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/ic_app_example"
                    android:scaleType="centerCrop"
                    app:sriv_border_width="2dp"
                    app:sriv_border_color="@color/tag_yellow"
                    app:sriv_oval="false"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_alignParentStart="true"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <TextView
                    android:layout_margin="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black_light"
                    android:text="选择类型"/>

                <com.zhy.view.flowlayout.TagFlowLayout
                    zhy:max_select="1"
                    android:id="@+id/id_flowlayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                </com.zhy.view.flowlayout.TagFlowLayout>

                <View
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_line"/>
                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_margin="16dp"
                        android:gravity="start"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black_light"
                        android:text="购买数量"/>
                    <LinearLayout
                        android:layout_margin="24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/selext_num_bg">
                        <ImageView
                            android:id="@+id/subtract"
                            android:padding="6dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@mipmap/ic_app_jian"/>
                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/gray_line"/>
                        <TextView
                            android:id="@+id/select_num"
                            android:gravity="center"
                            android:minWidth="24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:text="1"/>
                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="@color/gray_line"/>
                        <ImageView
                            android:id="@+id/add"
                            android:padding="6dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@mipmap/ic_app_add"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/next"
                android:clickable="true"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@color/red_main2"
                android:text="确定"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>