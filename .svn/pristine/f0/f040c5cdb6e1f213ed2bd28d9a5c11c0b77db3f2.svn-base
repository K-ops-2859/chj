<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_new_room_info"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_all"
    tools:context="com.dikai.chenghunjiclient.activity.me.NewRoomInfoActivity">
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/photo_pager"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <View
            android:id="@+id/top_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:contentInsetStart="0dp"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal"
            android:background="@color/transparent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginStart="9dp"
                    android:id="@+id/back"
                    android:padding="9dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_app_white_back"
                    android:background="@drawable/text_bg_trans_blank"/>
                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:id="@+id/view4"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:minWidth="88dp"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:layout_marginEnd="9dp"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/text_bg_trans_blank">
                    <TextView
                        android:id="@+id/now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:text="1"/>
                    <TextView
                        android:id="@+id/total"
                        android:paddingTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:text="/1"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
        <View
            android:layout_width="1px"
            android:layout_weight="1"
            android:layout_height="0dp"/>
        <LinearLayout
            android:paddingTop="18dp"
            android:paddingBottom="12dp"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/transparent_black_half">
            <TextView
                android:textStyle="bold"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="宴会厅名称"/>
            <TextView
                android:id="@+id/info"
                android:layout_marginTop="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="面积：300㎡      层高：4.5m     长·宽：16m · 8m"/>
            <TextView
                android:id="@+id/table"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:text="容纳桌数：20~26桌"/>
            <View
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"/>
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/logo"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_logo_new"
                    app:sriv_border_color="@color/white"
                    app:sriv_border_width="0dp"
                    app:sriv_oval="true" />
                <TextView
                    android:id="@+id/hotel"
                    android:layout_marginStart="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="酒店名称"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
