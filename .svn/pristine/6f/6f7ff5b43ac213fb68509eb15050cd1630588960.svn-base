<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_boom"
    xmlns:myImageView="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yellow_2"
    tools:context="com.dikai.chenghunjiclient.activity.store.BoomActivity">
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white">

            <ImageView
                android:layout_marginEnd="20dp"
                android:id="@+id/back"
                android:padding="10dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_app_gray_back"/>

            <TextView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center"
                android:text="免费领爆米花"/>
            <TextView
                android:id="@+id/rule"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:textColor="@color/black_light_two"
                android:textSize="14sp"
                android:gravity="center"
                android:text="规则"/>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.dikai.chenghunjiclient.view.MyImageView
                    android:id="@+id/boom_heand_bg"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    myImageView:aspect_ratio="0.86"/>
                <LinearLayout
                    android:layout_marginEnd="16dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:foreground="?android:attr/selectableItemBackground"
                        android:id="@+id/boom_gift"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/boom_gift"/>
                    <ImageView
                        android:foreground="?android:attr/selectableItemBackground"
                        android:id="@+id/boom_site"
                        android:layout_marginTop="5dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/boom_site"/>
                    <ImageView
                        android:foreground="?android:attr/selectableItemBackground"
                        android:id="@+id/boom_record"
                        android:layout_marginTop="5dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/boom_record"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/yellow_deep"
                    android:text="距离下次领取还有"/>
                <cn.iwgang.countdownview.CountdownView
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/boom_counter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:isHideTimeBackground="false"
                    app:isShowTimeBgDivisionLine="true"
                    app:timeBgDivisionLineColor="@color/gray_line"
                    app:timeBgDivisionLineSize="1dp"
                    app:timeBgColor="@color/white"
                    app:timeBgSize="48dp"
                    app:timeBgRadius="3dp"
                    app:isShowDay="true"
                    app:isShowHour="true"
                    app:isShowMinute="true"
                    app:isShowSecond="true"
                    app:isShowMillisecond="false"
                    app:timeTextColor="@color/black"
                    app:timeTextSize="30sp"
                    app:isTimeTextBold="false"
                    app:suffixGravity="center"
                    app:suffixTextColor="#000000"
                    app:suffixTextSize="15sp"
                    app:suffixDay="天"
                    app:suffixHour="时"
                    app:suffixMinute="分"
                    app:suffixSecond="秒"
                    app:suffixMillisecond="毫秒"/>
                <ImageView
                    android:foreground="?android:attr/selectableItemBackground"
                    android:id="@+id/get_popcorn"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="260dp"
                    android:layout_height="45dp"/>

                <TextView
                    android:id="@+id/boom_time"
                    android:layout_margin="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/orange"
                    android:text=""/>

                <com.dikai.chenghunjiclient.view.MyImageView
                    android:id="@+id/boom_hint"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    myImageView:aspect_ratio="3.64"/>
                <TextView
                    android:id="@+id/get_prize_num"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/yellow_deep"
                    android:text="当前剩余抽奖次数 0 次"/>
                <com.dikai.chenghunjiclient.popcorn.LuckyMonkeyPanelView
                    android:visibility="visible"
                    android:layout_margin="20dp"
                    android:id="@+id/lucky_panel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
