                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="就业大气扛起来 · 新人"
                android:textColor="@color/gray_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
