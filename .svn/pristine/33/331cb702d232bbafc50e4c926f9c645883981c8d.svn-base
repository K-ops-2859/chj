<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_reset_pwd"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background"
    tools:context="com.dikai.chenghunjiclient.activity.register.ResetPwdActivity">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white">
            <ImageView
                android:id="@+id/activity_reset_pwd_back"
                android:padding="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_app_gray_back"/>
            <TextView
                android:layout_marginEnd="40dp"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/main_text"
                android:textSize="18sp"
                android:gravity="center"
                android:text="设置密码"/>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="14dp"
                android:layout_marginTop="14dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="新密码"
                android:textColor="@color/gray_text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/activity_reset_pwd_pwd1"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:padding="10dp"
                android:background="@null"
                android:textColorHint="@color/gray_text_1"
                android:textColor="@color/main_text"
                android:hint="请输入新的密码"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="16sp"
            android:background="@color/gray_line" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="14dp"
                android:layout_marginTop="14dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="确认密码"
                android:textColor="@color/gray_text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/activity_reset_pwd_pwd2"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:padding="10dp"
                android:background="@null"
                android:textColorHint="@color/gray_text_1"
                android:textColor="@color/main_text"
                android:hint="请再次输入新密码"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginStart="16sp"
            android:background="@color/gray_line" />

        <LinearLayout
            android:id="@+id/activity_reset_code_layout"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginBottom="14dp"
                android:layout_marginTop="14dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="邀请码"
                android:textColor="@color/gray_text"
                android:textSize="14sp" />
            <EditText
                android:id="@+id/activity_reset_code"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:padding="10dp"
                android:background="@null"
                android:textColorHint="@color/gray_text_1"
                android:textColor="@color/main_text"
                android:hint="请输入邀请码（选填）"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/activity_reset_pwd_next"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/select_btn_main"
        android:clickable="true"
        android:gravity="center"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="14sp" />
</LinearLayout>
