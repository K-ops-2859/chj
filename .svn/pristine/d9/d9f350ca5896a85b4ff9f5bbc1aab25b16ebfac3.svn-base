<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_room_photo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.dikai.chenghunjiclient.activity.store.RoomPhotoActivity">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/activity_photo_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:padding="10dp"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_app_gray_back" />

            <TextView
                android:id="@+id/activity_photo_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:text="图片"
                android:textColor="@color/main_text"
                android:textSize="18sp" />

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="match_parent"></RelativeLayout>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <com.dikai.chenghunjiclient.view.MyLoadRecyclerView
        android:id="@+id/activity_photo_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1" />
</LinearLayout>
