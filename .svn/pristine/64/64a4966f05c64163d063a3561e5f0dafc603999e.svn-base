<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_custom"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:myImageView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.dikai.chenghunjiclient.activity.ad.CustomActivity">
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:layout_marginEnd="60dp"
            android:id="@+id/back"
            android:padding="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_app_gray_back"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="center"
            android:text="私人订制"/>
        <TextView
            android:visibility="invisible"
            android:gravity="center"
            android:id="@+id/dingzhi"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="私人订制"/>
    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.dikai.chenghunjiclient.view.MyImageView
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                myImageView:aspect_ratio="3"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_margin="14dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="区域"/>

                <TextView
                    android:clickable="true"
                    android:padding="14dp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_btn"
                    android:hint="请选择您所在区域"
                    android:textSize="14sp"
                    android:text=""
                    android:id="@+id/area"/>

                <ImageView
                    android:layout_marginEnd="14dp"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@mipmap/ic_app_gray_goin"/>
            </LinearLayout>
            <View
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_line"/>
            <LinearLayout
                android:id="@+id/hotel_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_margin="14dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:text="桌数"/>
                    <EditText
                        android:id="@+id/tables"
                        android:padding="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_btn"
                        android:hint="请输入预期桌数"
                        android:textSize="14sp"
                        android:inputType="numberDecimal"
                        android:text=""/>
                    <ImageView
                        android:layout_marginEnd="14dp"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/ic_app_gray_goin"/>
                </LinearLayout>
                <View
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_margin="14dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:text="价格"/>
                    <EditText
                        android:id="@+id/price"
                        android:padding="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_btn"
                        android:hint="请输入用餐标准"
                        android:textSize="14sp"
                        android:inputType="numberDecimal"
                        android:text=""/>
                    <ImageView
                        android:layout_marginEnd="14dp"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/ic_app_gray_goin"/>
                </LinearLayout>
                <View
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_line"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_margin="14dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="婚期"
                    android:id="@+id/textView7"/>

                <TextView
                    android:clickable="true"
                    android:id="@+id/date"
                    android:padding="14sp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_btn"
                    android:hint="请选择您的婚期"
                    android:textSize="14sp"
                    android:text=""/>
                <ImageView
                    android:layout_marginEnd="14dp"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@mipmap/ic_app_gray_goin"/>
            </LinearLayout>
            <View
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_line"/>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/hunqing_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_margin="14dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:text="心理价位"/>
                    <EditText
                        android:id="@+id/money"
                        android:padding="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_btn"
                        android:hint="请输入您的心理价位"
                        android:textSize="14sp"
                        android:inputType="numberDecimal"
                        android:text=""/>
                    <ImageView
                        android:layout_marginEnd="14dp"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/ic_app_gray_goin"/>
                </LinearLayout>
                <View
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/gray_line"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_margin="14dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:text="备注"/>
                <EditText
                    android:id="@+id/remark"
                    android:gravity="start"
                    android:padding="14sp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_btn"
                    android:hint="请选择您的特殊需求"
                    android:textSize="14sp"
                    android:text=""/>
                <ImageView
                    android:layout_marginEnd="14dp"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@mipmap/ic_app_gray_goin"/>
            </LinearLayout>
            <View
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_line"/>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tag_yellow"
                android:textSize="14sp"
                android:text="请填写您的信息及需求，以备我们为您带来更为优质的婚礼服务！"/>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/call"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textColor="@color/gray_text"
                    android:textSize="16sp"
                    android:text="电话咨询"
                    android:gravity="center"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:background="@drawable/text_bg_gray_new"/>
                <TextView
                    android:layout_marginStart="20dp"
                    android:id="@+id/publish"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:text="提交"
                    android:gravity="center"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:background="@drawable/text_bg_zong"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
