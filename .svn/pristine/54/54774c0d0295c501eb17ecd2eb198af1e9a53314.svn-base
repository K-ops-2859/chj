<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_hotel_info"
    xmlns:myRelativeLayout="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.dikai.chenghunjiclient.activity.store.HotelInfoActivity">
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:background="@color/white">
        <ImageView
            android:id="@+id/back"
            android:padding="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_app_black_back"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:gravity="start|center_vertical"
            android:text=""/>
    </LinearLayout>
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:ignore="MergeRootFrame">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/activity_hotel_appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/activity_hotel_collapsing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/transparent"
                app:statusBarScrim="@color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <LinearLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <com.dikai.chenghunjiclient.view.MyRelativeLayout
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        myRelativeLayout:relative_ratio="1.82">
                        <com.joooonho.SelectableRoundedImageView
                            android:id="@+id/activity_hotel_logo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:sriv_left_top_corner_radius="8dp"
                            app:sriv_right_top_corner_radius="8dp"
                            app:sriv_left_bottom_corner_radius="8dp"
                            app:sriv_right_bottom_corner_radius="8dp"
                            app:sriv_border_width="0dip"
                            app:sriv_border_color="#008fea"
                            app:sriv_oval="false"/>
                        <TextView
                            android:id="@+id/identity"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:clickable="true"
                            android:layout_margin="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/money_1"
                            android:background="@drawable/text_bg_black_trans"
                            android:textSize="16sp"
                            android:text="酒店"/>
                        <TextView
                            android:id="@+id/pic_number"
                            android:paddingStart="6dp"
                            android:paddingEnd="6dp"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:clickable="true"
                            android:layout_margin="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:textColor="@color/white"
                            android:background="@drawable/text_bg_trans_blank"
                            android:textSize="12sp"
                            android:text="0 张图"/>
                    </com.dikai.chenghunjiclient.view.MyRelativeLayout>
                    <TextView
                        android:id="@+id/name"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text=""/>
                    <LinearLayout
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tag_3"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/sup_tag_bg_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/text_blue2"
                            android:text="婚礼担保"/>
                        <TextView
                            android:layout_marginStart="6dp"
                            android:id="@+id/tag_2"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@drawable/sup_tag_bg_gold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/orange2"
                            android:text="消费有礼"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/canbiao_layout"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/gray_text_light4">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:textColor="@color/black_deep"
                                android:text="最低餐标"/>
                            <TextView
                                android:maxWidth="200dp"
                                android:layout_marginTop="7dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="@color/red_main3"
                                android:text="0"
                                android:id="@+id/canbiao"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_marginStart="12dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginTop="22dp"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:src="@mipmap/ic_app_add_black"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:textColor="@color/black_deep"
                                android:text="服务费"/>
                            <TextView
                                android:id="@+id/service"
                                android:layout_marginTop="7dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:textColor="@color/red_main3"
                                android:text="0%"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:lineSpacingExtra="4dp"
                        android:id="@+id/info"
                        android:layout_marginTop="12dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/black_deep"
                        android:text="简介"/>
                    <TextView
                        android:id="@+id/info_all"
                        android:clickable="true"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/orange2"
                        android:text="查看全部"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:background="@color/gray_background3"/>
                    <LinearLayout
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:paddingStart="18dp"
                        android:paddingEnd="18dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@color/black_deep"
                            android:text="地址："/>
                        <TextView
                            android:id="@+id/address"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black_three"
                            android:text=""/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="9dp"
                        android:background="@color/gray_background3"/>
                    <LinearLayout
                        android:id="@+id/tag_1_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:gravity="center_vertical"
                            android:paddingTop="15dp"
                            android:paddingBottom="15dp"
                            android:paddingStart="18dp"
                            android:paddingEnd="18dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@mipmap/ic_app_yuding"/>
                            <TextView
                                android:id="@+id/tag_1"
                                android:layout_marginStart="4dp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@color/gray_text"
                                android:text="预订婚宴送9999元伴手礼"/>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="9dp"
                            android:background="@color/gray_background3"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/discounts_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="18dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:text="基础优惠礼包"/>
                        <TextView
                            android:lineSpacingExtra="8dp"
                            android:id="@+id/discounts"
                            android:layout_marginBottom="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="18dp"
                            android:layout_marginStart="18dp"
                            android:padding="12dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/black_three"
                            android:background="@drawable/text_bg_line_pink"
                            android:text=""/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="9dp"
                            android:background="@color/gray_background3"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.design.widget.CollapsingToolbarLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_line"/>
            <android.support.design.widget.TabLayout
                android:id="@+id/activity_hotel_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                app:tabIndicatorColor="@color/main"
                app:tabSelectedTextColor="@color/main"
                app:tabTextColor="@color/gray_text"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_line"/>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/activity_hotel_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        </android.support.v4.view.ViewPager>
    </android.support.design.widget.CoordinatorLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_line"/>
    <LinearLayout
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/activity_info_call_layout"
            android:layout_marginStart="18dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="电话咨询"
            android:padding="12dp"
            android:background="@drawable/sup_bg_call"/>
        <TextView
            android:id="@+id/book"
            android:clickable="true"
            android:layout_marginEnd="18dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="免费预约"
            android:padding="12dp"
            android:background="@drawable/sup_bg_yuyue"/>
    </LinearLayout>
</LinearLayout>
