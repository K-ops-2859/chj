<LinearLayout
    android:id="@+id/activity_hotel_info"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background"
    tools:context="com.dikai.chenghunjiclient.fragment.store.NewStoreFragment">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white">
            <LinearLayout
                android:id="@+id/fragment_store_location_layout"
                android:background="@drawable/button_item_click"
                android:orientation="horizontal"
                android:layout_width="80dp"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/fragment_store_location"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="60dp"
                    android:textSize="14sp"
                    android:lines="2"
                    android:ellipsize="end"
                    android:textColor="@color/black_deep"
                    android:text="青岛"/>
                <ImageView
                    android:layout_marginLeft="4dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/ic_app_black_down"/>
            </LinearLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/fragment_store_date"
                    android:padding="8dp"
                    android:gravity="center"
                    android:background="@drawable/bg_gray_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/ic_app_red_date"/>
                    <TextView
                        android:id="@+id/fragment_store_title"
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_text"
                        android:text="2018-01-01"
                        android:textSize="16sp"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:id="@+id/fragment_store_search"
                android:gravity="center"
                android:background="@drawable/button_item_click"
                android:layout_width="60dp"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_app_gray_search"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/imageView"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/new_store_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/new_store_head_layout"/>

            <android.support.design.widget.TabLayout
                android:id="@+id/new_store_tabs"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                app:tabIndicatorColor="@color/red_deep"
                app:tabSelectedTextColor="@color/black_light"
                app:tabTextColor="@color/gray_text" />
            <android.support.v7.widget.RecyclerView
                android:background="@color/white"
                android:padding="5dp"
                android:id="@+id/store_sup_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/place_text"
                android:gravity="center"
                android:background="@color/white"
                android:paddingTop="80dp"
                android:paddingBottom="80dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/gray_text"
                android:text="───────── 暂无数据哦 ಠᴗಠ ─────────"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_line"/>
            <LinearLayout
                android:id="@+id/more_sup"
                android:background="@color/white"
                android:padding="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red_deep"
                    android:textSize="14sp"
                    android:text="查看更多"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@mipmap/ic_app_red_go"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
