<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/card_white_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="消费日期"/>
        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text"
            android:textSize="14sp"
            android:text="2018-08-30 11:45"/>
        <TextView
            android:id="@+id/state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_new"
            android:textSize="14sp"
            android:text="待付款"/>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="消费酒店"/>
        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text"
            android:textSize="14sp"
            android:text="2018-08-30 11:45"/>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="应付金额"/>
        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/all_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text"
            android:textSize="14sp"
            android:text="￥32000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="返还金额"/>
        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/return_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red_new"
            android:textSize="14sp"
            android:text="￥32000"/>
        <TextView
            android:id="@+id/type_info"
            android:layout_marginStart="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text"
            android:textSize="11sp"
            android:text="    返至伴手礼额度"/>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="支付类型"/>
        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/pay_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text"
            android:textSize="14sp"
            android:text="线上支付"/>
    </LinearLayout>

    <LinearLayout
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="审核状态"/>
        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/shenhe_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text"
            android:textSize="14sp"
            android:text="待审核"/>
    </LinearLayout>

    <LinearLayout
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="实付："/>
        <TextView
            android:id="@+id/net_money"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/red_new"
            android:textSize="14sp"
            android:text="￥32000"/>
        <TextView
            android:visibility="gone"
            android:clickable="true"
            android:id="@+id/delete"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingStart="11dp"
            android:paddingEnd="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text"
            android:textSize="12sp"
            android:text="删除订单"
            android:background="@drawable/text_bg_gray_line_light"/>
        <TextView
            android:visibility="gone"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:id="@+id/reject"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingStart="11dp"
            android:paddingEnd="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_text"
            android:textSize="12sp"
            android:text="拒单"
            android:background="@drawable/text_bg_gray_line_light"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/pay"
            android:clickable="true"
            android:layout_marginStart="8dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingStart="11dp"
            android:paddingEnd="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:text="付款"
            android:background="@drawable/text_bg_red_new"/>
    </LinearLayout>
</LinearLayout>