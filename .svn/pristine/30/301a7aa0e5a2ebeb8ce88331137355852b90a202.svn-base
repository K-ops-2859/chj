<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_my_wed_apply"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.dikai.chenghunjiclient.activity.wedding.MyWedApplyActivity">
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:src="@mipmap/ic_app_red_back" />

        <TextView
            android:layout_marginLeft="20dp"
            android:id="@+id/activity_zone_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我要结婚"
            android:textColor="@color/black"
            android:textSize="19sp" />
        <TextView
            android:id="@+id/apply"
            android:clickable="true"
            android:gravity="center"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:textColor="@color/black_deep"
            android:text="提交"/>
    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:fadingEdge="none"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadeScrollbars="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="30dp"
                android:layout_marginLeft="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/black_deep"
                android:textStyle="bold"
                android:text="填写您的信息"/>
            <TextView
                android:layout_margin="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="start"
                android:textColor="@color/black_deep"
                android:text="请填写常用的手机号，让我们更亲密"/>

            <TextView
                android:layout_margin="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black_deep"
                android:text="姓名"/>
            <LinearLayout
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/name"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="start"
                    android:textColor="@color/black_deep"
                    android:textColorHint="@color/gray_light"
                    android:hint="输入姓名"/>
                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@drawable/gray_cirlce"/>
            </LinearLayout>
            <View
                android:layout_marginTop="14dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_light_line"/>


            <TextView
                android:layout_margin="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black_deep"
                android:text="手机"/>
            <LinearLayout
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/phone"
                    android:inputType="phone"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="start"
                    android:textColor="@color/black_deep"
                    android:textColorHint="@color/gray_light"
                    android:hint="输入手机"/>
                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@drawable/gray_cirlce"/>
            </LinearLayout>
            <View
                android:layout_marginTop="14dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_light_line"/>



            <TextView
                android:layout_margin="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black_deep"
                android:text="身份"/>
            <LinearLayout
                android:id="@+id/type_layout"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/type"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="start"
                    android:textColor="@color/black_deep"
                    android:textColorHint="@color/gray_light"
                    android:hint="选择身份"/>
                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@drawable/gray_cirlce"/>
            </LinearLayout>
            <View
                android:layout_marginTop="14dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_light_line"/>


            <TextView
                android:layout_margin="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black_deep"
                android:text="婚期"/>
            <LinearLayout
                android:id="@+id/date_layout"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/date"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="start"
                    android:textColor="@color/black_deep"
                    android:textColorHint="@color/gray_light"
                    android:hint="选择婚期"/>
                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@drawable/gray_cirlce"/>
            </LinearLayout>
            <View
                android:layout_marginTop="14dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_light_line"/>


            <TextView
                android:layout_margin="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black_deep"
                android:text="预算"/>
            <LinearLayout
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/money"
                    android:inputType="numberDecimal"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="start"
                    android:textColor="@color/black_deep"
                    android:textColorHint="@color/gray_light"
                    android:hint="输入预算"/>
                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@drawable/gray_cirlce"/>
            </LinearLayout>
            <View
                android:layout_marginTop="14dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_light_line"/>

            <TextView
                android:layout_margin="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black_deep"
                android:text="地区"/>
            <LinearLayout
                android:id="@+id/area_layout"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/area"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="start"
                    android:textColor="@color/black_deep"
                    android:textColorHint="@color/gray_light"
                    android:hint="选择所在地"/>
                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@drawable/gray_cirlce"/>
            </LinearLayout>
            <View
                android:layout_marginTop="14dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_light_line"/>


            <TextView
                android:layout_margin="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black_deep"
                android:text="酒店"/>
            <LinearLayout
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/hotel"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="start"
                    android:textColor="@color/black_deep"
                    android:textColorHint="@color/gray_light"
                    android:hint="输入酒店"/>
                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@drawable/gray_cirlce"/>
            </LinearLayout>
            <View
                android:layout_marginTop="14dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_light_line"/>


            <TextView
                android:layout_margin="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black_deep"
                android:text="地点"/>
            <LinearLayout
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <EditText
                    android:id="@+id/address"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:gravity="start"
                    android:textColor="@color/black_deep"
                    android:textColorHint="@color/gray_light"
                    android:hint="输入酒店地点"/>
                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@drawable/gray_cirlce"/>
            </LinearLayout>
            <View
                android:layout_marginTop="14dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_light_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_margin="18dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/black_deep"
                    android:text="备注"/>
                <TextView
                    android:id="@+id/edit"
                    android:clickable="true"
                    android:padding="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/pink"
                    android:text="编辑"/>
            </LinearLayout>
            <TextView
                android:id="@+id/remark"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="start"
                android:textColor="@color/black_deep"
                android:text=""/>
            <View
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_light_line"/>

            <TextView
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="start"
                android:textColor="@color/gray_light"
                android:text="@string/apply_wed_remark"/>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>

