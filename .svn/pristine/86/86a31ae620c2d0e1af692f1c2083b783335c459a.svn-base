<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_wed_code"
    xmlns:myRelativeLayout="http://schemas.android.com/apk/res-auto"
    xmlns:myImageView="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/pink_deep"
    tools:context="com.dikai.chenghunjiclient.activity.wedding.WedCodeActivity">
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <ImageView
            android:layout_alignParentStart="true"
            android:id="@+id/back"
            android:padding="6dp"
            android:background="?android:attr/selectableItemBackground"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/white_back"/>
        <ImageView
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:id="@+id/refresh"
            android:padding="8dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_app_refresh"/>
    </RelativeLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fadingEdge="none"
        android:fadeScrollbars="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="33sp"
                android:textColor="@color/white"
                android:text="扫码办婚礼 返现10%"/>
            <com.dikai.chenghunjiclient.view.MyRelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                myRelativeLayout:relative_ratio="0.92">
                <android.support.v7.widget.CardView
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:targetApi="lollipop"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="3dp"
                    app:cardUseCompatPadding="true"
                    app:cardPreventCornerOverlap="false">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <com.dikai.chenghunjiclient.view.MyImageView
                            android:layout_margin="70dp"
                            android:id="@+id/qrcode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@color/gray_background_1"
                            myImageView:aspect_ratio="1"/>
                        <TextView
                            android:id="@+id/save"
                            android:clickable="true"
                            android:layout_marginBottom="20dp"
                            android:padding="10dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/main_line"
                            android:textSize="14sp"
                            android:text="保存图片"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </com.dikai.chenghunjiclient.view.MyRelativeLayout>
            <android.support.v7.widget.CardView
                android:id="@+id/invite_layout"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:targetApi="lollipop"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="3dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/today_invite"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/main_line"
                        android:textSize="15sp"
                        android:text="今日邀请   0人"/>
                    <TextView
                        android:id="@+id/total_invite"
                        android:paddingTop="18dp"
                        android:paddingBottom="18dp"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/black_light"
                        android:textSize="15sp"
                        android:text="累计邀请   0人"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/rule"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="奖励规则"/>
                <View
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_width="1px"
                    android:layout_height="16dp"
                    android:background="@color/white"/>
                <TextView
                    android:id="@+id/service"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15sp"
                    android:text="联系我们"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
