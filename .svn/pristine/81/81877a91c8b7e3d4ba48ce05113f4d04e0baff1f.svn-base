<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_we_quwstion"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.dikai.chenghunjiclient.activity.wedding.WeQuwstionActivity">
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white">
            <ImageView
                android:layout_marginRight="20dp"
                android:id="@+id/back"
                android:padding="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_app_gray_back"/>
            <TextView
                android:id="@+id/title"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/main_text"
                android:textSize="18sp"
                android:gravity="center"
                android:text=""/>

            <TextView
                android:id="@+id/save"
                android:clickable="true"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:textColor="@color/main_line"
                android:textSize="15sp"
                android:gravity="center"
                android:text="保存"/>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_margin="12dp"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/ic_app_circle_add"/>
        <EditText
            android:inputType="number"
            android:id="@+id/ev_budget"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:textSize="15sp"
            android:textColor="@color/black_one"
            android:hint="请输入您的场布预算"
            android:textColorHint="@color/gray_text"/>
        <TextView
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/black_one"
            android:text="元"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:layout_margin="12dp"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/ic_app_circle_edit"/>
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:textSize="15sp"
            android:textColor="@color/black_one"
            android:hint="婚期"
            android:textColorHint="@color/gray_text"/>
    </LinearLayout>

    <EditText
        android:visibility="gone"
        android:id="@+id/edit_answer"
        android:padding="10dp"
        android:hint=""
        android:textColorHint="@color/gray_text"
        android:textSize="15sp"
        android:textColor="@color/black_one"
        android:gravity="start"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        android:background="@drawable/bg_edit_gray_1"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ll_led"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:background="@drawable/ripple_bg"
            android:id="@+id/ll_led1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_margin="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black_one"
                android:textSize="16sp"
                android:text="不需要"/>
            <ImageView
                android:id="@+id/ll_img1"
                android:visibility="visible"
                android:layout_marginRight="12dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_app_red_right"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_line"
            android:layout_marginLeft="12dp"/>
        <LinearLayout
            android:background="@drawable/ripple_bg"
            android:id="@+id/ll_led2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_margin="16dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black_one"
                android:textSize="16sp"
                android:text="需要"/>
            <ImageView
                android:id="@+id/ll_img2"
                android:visibility="gone"
                android:layout_marginRight="12dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_app_red_right"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line"
        android:layout_marginLeft="12dp"/>

</LinearLayout>
