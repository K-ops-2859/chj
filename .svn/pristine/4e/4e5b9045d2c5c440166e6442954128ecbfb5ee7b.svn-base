<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_setting"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background"
    tools:context="com.dikai.chenghunjiclient.activity.me.SettingActivity">

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white">

            <ImageView
                android:id="@+id/setting_back"
                android:padding="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_app_gray_back"/>

            <TextView
                android:layout_marginRight="40dp"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/main_text"
                android:textSize="18sp"
                android:gravity="center"
                android:text="设置"/>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">
                <LinearLayout
                    android:id="@+id/setting_phone_layout"
                    android:background="?android:attr/selectableItemBackground"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginBottom="14dp"
                        android:layout_marginTop="14dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="修改手机"
                        android:textColor="@color/gray_text"
                        android:textSize="14sp" />
                    <ImageView
                        android:layout_marginRight="16dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/ic_app_gray_goin" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="16sp"
                    android:background="@color/gray_line" />
                <LinearLayout
                    android:background="?android:attr/selectableItemBackground"
                    android:id="@+id/setting_pwd_layout"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginBottom="14dp"
                        android:layout_marginTop="14dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="修改密码"
                        android:textColor="@color/gray_text"
                        android:textSize="14sp" />
                    <ImageView
                        android:layout_marginRight="16dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/ic_app_gray_goin" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="16sp"
                    android:background="@color/gray_line" />
                <LinearLayout
                    android:background="?android:attr/selectableItemBackground"
                    android:id="@+id/setting_service_layout"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginBottom="14dp"
                        android:layout_marginTop="14dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="联系客服"
                        android:textColor="@color/gray_text"
                        android:textSize="14sp" />
                    <ImageView
                        android:layout_marginRight="16dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/ic_app_gray_goin" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginStart="16sp"
                    android:background="@color/gray_line" />
                <LinearLayout
                    android:background="?android:attr/selectableItemBackground"
                    android:id="@+id/setting_update_layout"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginBottom="14dp"
                        android:layout_marginTop="14dp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="软件更新"
                        android:textColor="@color/gray_text"
                        android:textSize="14sp" />
                    <TextView
                        android:visibility="visible"
                        android:id="@+id/setting_update_info"
                        android:layout_margin="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="软件更新"
                        android:textColor="@color/main"
                        android:textSize="12sp" />
                    <ImageView
                        android:layout_marginRight="16dp"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/ic_app_gray_goin" />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:padding="10dp"
                android:id="@+id/setting_logout_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/text_white_pressed"
                android:clickable="true"
                android:gravity="center"
                android:text="退出登录"
                android:textColor="@color/gray_text"
                android:textSize="14sp"/>
            
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    
</LinearLayout>
