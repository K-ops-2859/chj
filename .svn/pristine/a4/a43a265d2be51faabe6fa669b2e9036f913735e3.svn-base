<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_store_sup"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background"
    tools:context="com.dikai.chenghunjiclient.activity.store.StoreSupActivity">
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/white">
            <LinearLayout
                android:id="@+id/fragment_store_location_layout"
                android:background="@drawable/button_item_click"
                android:orientation="horizontal"
                android:layout_width="80dp"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/fragment_store_location"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="60dp"
                    android:textSize="14sp"
                    android:lines="2"
                    android:ellipsize="end"
                    android:textColor="@color/main"
                    android:text="青岛"/>
                <ImageView
                    android:layout_marginLeft="4dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@mipmap/ic_app_red_down"/>
            </LinearLayout>

            <RelativeLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/fragment_store_date"
                    android:padding="5dp"
                    android:gravity="center"
                    android:background="@drawable/bg_white_stroke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/ic_app_red_date"/>
                    <TextView
                        android:id="@+id/fragment_store_title"
                        android:layout_marginLeft="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_text"
                        android:text="2012-01-01"
                        android:textSize="16sp"/>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:id="@+id/fragment_store_search"
                android:gravity="center"
                android:background="@drawable/button_item_click"
                android:layout_width="60dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/ic_app_main_search"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
    <com.dikai.chenghunjiclient.view.MyLoadRecyclerView
        android:id="@+id/fragment_store_recycler"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>
