<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/has_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_margin="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black_deep"
            android:text="酒店名称"/>
        <LinearLayout
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/hotel_name"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="start"
                android:textColor="@color/black_deep"
                android:textColorHint="@color/gray_light"
                android:hint="输入预定酒店名称"/>
            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@drawable/gray_cirlce"/>
        </LinearLayout>
        <View
            android:layout_marginTop="14dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_light_line"/>
        <TextView
            android:layout_margin="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black_deep"
            android:text="酒店地址"/>
        <LinearLayout
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/hotel_address"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="start"
                android:textColor="@color/black_deep"
                android:textColorHint="@color/gray_light"
                android:hint="输入预定酒店地址"/>
            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@drawable/gray_cirlce"/>
        </LinearLayout>
        <View
            android:layout_marginTop="14dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_light_line"/>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/have_not_book"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_margin="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black_deep"
            android:text="大概桌数"/>
        <LinearLayout
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/hotel_table"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="start"
                android:inputType="number"
                android:textColor="@color/black_deep"
                android:textColorHint="@color/gray_light"
                android:hint="输入婚宴大概桌数"/>
            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@drawable/gray_cirlce"/>
        </LinearLayout>
        <View
            android:layout_marginTop="14dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_light_line"/>
        <TextView
            android:layout_margin="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black_deep"
            android:text="每桌餐标"/>
        <LinearLayout
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <EditText
                android:id="@+id/hotel_norm"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:gravity="start"
                android:textColor="@color/black_deep"
                android:textColorHint="@color/gray_light"
                android:hint="输入婚宴每桌消费标准"/>
            <ImageView
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:src="@drawable/gray_cirlce"/>
        </LinearLayout>
        <View
            android:layout_marginTop="14dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_light_line"/>
        <TextView
            android:layout_marginTop="14dp"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="start"
            android:textColor="@color/gray_light"
            android:text="@string/apply_wed_hotel_info"/>
    </LinearLayout>
</LinearLayout>