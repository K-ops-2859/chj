<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_new_plan"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_background"
    tools:context="com.dikai.chenghunjiclient.activity.me.NewPlanActivity">
    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/fragment_hunqing_place"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@color/white">
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_logo_new"/>
            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:src="@drawable/ic_app_hunqing_place2"/>
            <TextView
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_light_three"
                android:textSize="14sp"
                android:gravity="center"
                android:text="安排供应商、婚礼流程\n请下载婚庆公司专用版APP"/>
        </LinearLayout>
        <FrameLayout
            android:visibility="gone"
            android:id="@+id/fragment_add_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/back"
            android:padding="10dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_width="40dp"
            android:layout_height="?actionBarSize"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_app_gray_back"/>
    </RelativeLayout>
</LinearLayout>
