<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/zixun_layout"
    xmlns:myImageView="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">
    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">
            <TextView
                android:lineSpacingExtra="4dp"
                android:lines="2"
                android:ellipsize="end"
                android:id="@+id/zixun_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_deep"
                android:textSize="16sp"
                android:text=""/>

            <TextView
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="10dp"
                android:lines="2"
                android:ellipsize="end"
                android:id="@+id/zixun_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_three"
                android:textSize="14sp"
                android:text=""/>

            <TextView
                android:id="@+id/zixun_type"
                android:layout_marginTop="10dp"
                android:paddingBottom="2dp"
                android:paddingTop="2dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/pink_deep"
                android:textSize="14sp"
                android:text="婚礼"
                android:background="@drawable/text_bg_pink"/>
        </LinearLayout>
        <com.dikai.chenghunjiclient.view.MyImageView
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            android:id="@+id/zixun_img"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:src="@color/gray_background_1"
            myImageView:aspect_ratio="1.25" />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_line"/>
</LinearLayout>