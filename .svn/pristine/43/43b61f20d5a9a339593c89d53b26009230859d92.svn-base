<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/man_info"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="14dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="@drawable/text_bg_black"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/man_info_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black_three"
            android:textSize="14sp"
            android:text="姓名：xxx"/>
        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:src="@mipmap/ic_app_pink_edit"/>
        <TextView
            android:id="@+id/man_info_edit"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_line"
            android:textSize="14sp"
            android:text=" 编辑"/>
    </LinearLayout>

    <TextView
        android:id="@+id/man_info_phone"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_three"
        android:textSize="14sp"
        android:text="手机：xxxxxxxxx"/>
    <TextView
        android:id="@+id/man_info_birth"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_three"
        android:textSize="14sp"
        android:text="出生日期：1991.11.19"/>
    <TextView
        android:id="@+id/man_info_star"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_three"
        android:textSize="14sp"
        android:text="星座：天蝎座"/>
    <TextView
        android:id="@+id/man_info_place"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_three"
        android:textSize="14sp"
        android:text="籍贯：山东青岛"/>
    <TextView
        android:id="@+id/man_info_profession"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_three"
        android:textSize="14sp"
        android:text="职业：导购"/>
    <TextView
        android:id="@+id/man_info_qq"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_three"
        android:textSize="14sp"
        android:text="QQ：123456789"/>
    <TextView
        android:id="@+id/man_info_wx"
        android:layout_marginTop="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black_three"
        android:textSize="14sp"
        android:text="微信：123456789"/>
</LinearLayout>