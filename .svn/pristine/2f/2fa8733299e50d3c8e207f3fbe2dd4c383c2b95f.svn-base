<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    tools:context="com.dikai.chenghunjiclient.fragment.plan.PlanFragment">
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/fragment_add_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:visibility="visible"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="@color/main_text"
                    android:textSize="18sp"
                    android:text="安排"/>
            </LinearLayout>
        </android.support.design.widget.AppBarLayout>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_app_plan_holder"/>
        <TextView
            android:id="@+id/fragment_add_place_text"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:layout_margin="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/gray_text"
            android:text="您还没有登录，登录后才能查看安排哟。"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_hunqing_place"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/white">
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_logo_new"/>
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:src="@drawable/ic_app_hunqing_place2"/>
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_light_three"
            android:textSize="14sp"
            android:gravity="center"
            android:text="安排供应商、婚礼流程\n请下载婚庆公司专用版APP"/>
    </LinearLayout>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/fragment_add_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>
