<?xml version="1.0" encoding="utf-8"?>
<com.dikai.chenghunjiclient.view.MyRelativeLayout
    xmlns:myRelativeLayout="http://schemas.android.com/apk/res-auto"
    xmlns:MyLuckyItem="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    myRelativeLayout:relative_ratio="1">
    <ImageView
        android:id="@+id/bg_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_1" />
    <ImageView
        android:id="@+id/bg_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_2"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.dikai.chenghunjiclient.popcorn.MyLuckyItem
                android:id="@+id/item1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                MyLuckyItem:prizeImg="@mipmap/lucky_prize1"
                MyLuckyItem:prizeName="@string/iphone_8"
                MyLuckyItem:item_ratio="1"/>
            <com.dikai.chenghunjiclient.popcorn.MyLuckyItem
                android:id="@+id/item2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                MyLuckyItem:prizeImg="@mipmap/lucky_prize6"
                MyLuckyItem:prizeName="@string/iqiyi_month_card"
                MyLuckyItem:item_ratio="1"/>
            <com.dikai.chenghunjiclient.popcorn.MyLuckyItem
                android:id="@+id/item3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                MyLuckyItem:prizeImg="@mipmap/lucky_prize3"
                MyLuckyItem:prizeName="@string/lucky_bead"
                MyLuckyItem:item_ratio="1"/>
            <com.dikai.chenghunjiclient.popcorn.MyLuckyItem
                android:id="@+id/item4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                MyLuckyItem:prizeImg="@mipmap/lucky_prize3"
                MyLuckyItem:prizeName="@string/lucky_bead"
                MyLuckyItem:item_ratio="1"/>
        </LinearLayout>
        <com.dikai.chenghunjiclient.view.MyRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            myRelativeLayout:relative_ratio="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <com.dikai.chenghunjiclient.popcorn.MyLuckyItem
                    android:id="@+id/item10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    MyLuckyItem:prizeImg="@mipmap/lucky_prize3"
                    MyLuckyItem:prizeName="@string/lucky_bead"
                    MyLuckyItem:item_ratio="0.5"/>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    tools:targetApi="lollipop"
                    app:cardCornerRadius="6dp"
                    app:cardUseCompatPadding="true"
                    app:cardPreventCornerOverlap="false">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/yellow_light_2">
                        <ImageView
                            android:foreground="?android:attr/selectableItemBackground"
                            android:id="@+id/start"
                            android:layout_margin="20dp"
                            android:src="@drawable/start_lottery"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <com.dikai.chenghunjiclient.popcorn.MyLuckyItem
                    android:id="@+id/item5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    MyLuckyItem:prizeImg="@mipmap/lucky_prize3"
                    MyLuckyItem:prizeName="@string/lucky_bead"
                    MyLuckyItem:item_ratio="0.5"/>
            </LinearLayout>
        </com.dikai.chenghunjiclient.view.MyRelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.dikai.chenghunjiclient.popcorn.MyLuckyItem
                android:id="@+id/item9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                MyLuckyItem:prizeImg="@mipmap/lucky_prize1"
                MyLuckyItem:prizeName="@string/iphone_8"
                MyLuckyItem:item_ratio="1"/>
            <com.dikai.chenghunjiclient.popcorn.MyLuckyItem
                android:id="@+id/item8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                MyLuckyItem:prizeImg="@mipmap/lucky_prize6"
                MyLuckyItem:prizeName="@string/iqiyi_month_card"
                MyLuckyItem:item_ratio="1"/>
            <com.dikai.chenghunjiclient.popcorn.MyLuckyItem
                android:id="@+id/item7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                MyLuckyItem:prizeImg="@mipmap/lucky_prize3"
                MyLuckyItem:prizeName="@string/lucky_bead"
                MyLuckyItem:item_ratio="1"/>
            <com.dikai.chenghunjiclient.popcorn.MyLuckyItem
                android:id="@+id/item6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                MyLuckyItem:prizeImg="@mipmap/lucky_prize3"
                MyLuckyItem:prizeName="@string/lucky_bead"
                MyLuckyItem:item_ratio="1"/>
        </LinearLayout>
    </LinearLayout>

</com.dikai.chenghunjiclient.view.MyRelativeLayout>