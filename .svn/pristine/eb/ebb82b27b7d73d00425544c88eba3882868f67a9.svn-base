<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/item_plan_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/item_plan_identity"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_text"
        android:textSize="14sp"
        android:text="婚庆"/>
    
    <LinearLayout
        android:padding="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/item_plan_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/gray_background"/>
        <LinearLayout
            android:layout_margin="6dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_plan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="为爱牵手婚庆服务"
                android:textSize="16sp"
                android:textColor="@color/main_text"/>
            <TextView
                android:id="@+id/item_plan_phone"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宋祖儿  100000000"
                android:textSize="14sp"
                android:textColor="@color/gray_text"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/item_plan_call"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@mipmap/ic_app_yellow_call"/>
    </LinearLayout>
    
</LinearLayout>